<Window x:Class="U3_A1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U3_A1"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid>
        <DockPanel x:Name="titleBar" LastChildFill="False" Margin="0,0,0,432" Background="#FFD8DEE9" MouseDown="titleBar_MouseDown"/>
        <Frame x:Name="Main" Margin="0,18,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
